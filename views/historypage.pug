extends layout
block content
    nav.navbar.navbar-light(style='background-color: #e3f2fd;' )
        .container
            a.navbar-brand(href='/')
                img(src='http://localhost:8080/images/assets/book.svg' width='60rem' height='60rem')
                span Softbox book shop
    .container.my-4
        .row.justify-content-center
            .col-xl-12.col-md-12
                h4 Book activity history 
                table.table.table-light.table-striped
                    thead
                        tr
                            td SSID 
                            td book name
                            td payment date
                    tbody
                    if historyDetail!==undefined
                        each history in historyDetail
                            tr
                                th=history.SSID
                                td=history.bookname
                                td=history.payment_date
                    else
                        h1.text-center seem you don't have book activity