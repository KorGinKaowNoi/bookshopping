extends layout
block content
    nav.navbar.navbar-light(style='background-color: #e3f2fd;' )
            .container
                a.navbar-brand(href='/')
                    img(src='http://localhost:8080/images/assets/book.svg' width='60rem' height='60rem')
                    span Softbox book shop
    .container-fluid.my-4
        .row.justify-content-center
            .col-xl-6.col-md-6.blocklog.text-center
                h1.text-center add book to your own
                form(method='POST' action='/users/add' enctype='multipart/form-data')
                    .form-group
                        input.my-4(type='file' name='image' placeholder='select your cover')
                    .form-group
                        input.form-control.mx-auto(name='isbn' type='text' placeholder='ISBN')
                    .form-group
                        input.form-control.mx-auto(name='bookname' type='text' placeholder='Bookname')
                    .form-group 
                        input.btn.btn-primary(name='button' value='submit' type='submit')