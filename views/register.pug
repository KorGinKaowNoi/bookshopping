extends layout
block content
    nav.navbar.navbar-light(style='background-color: #e3f2fd;' )
        .container
            a.navbar-brand(href='/')
                img(src='http://localhost:8080/images/assets/book.svg' width='60rem' height='60rem')
                span Softbox book shop
    .container
        .row.justify-content-center
            .col-xl-5.col-md-5.blocklog.text-center
                h1 Sign Up
                form(method='POST' action='/users/register' entype='multipart/form-data')
                    .form-group
                        input.form-control.mx-auto(name='email' type='email' placeholder='E-mail')
                    .form-group
                        input.form-control.mx-auto(name='username' type='text' placeholder='Username')
                    .form-group
                        input.form-control.mx-auto(name='password' type='password' placeholder='Password')
                    .form-group
                        input.form-control.mx-auto(name='conPass' type='password' placeholder='Confirm Password')
                    .form-group
                        input.btn.btn-primary(type='submit' value='Sign Up')